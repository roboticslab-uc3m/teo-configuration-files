<?xml version="1.0" encoding="UTF-8"?>

<device name="rightLegBroker" type="CanBusBroker" xmlns:xi="http://www.w3.org/2001/XInclude">

    <xi:include href="./common.xml" />

    <param name="bus">rightLeg</param>
    <param name="nodes">(ARH SRH FRH FRK FRA SRA FT FTRF)</param>

    <action phase="startup" level="10" type="attach">
        <paramlist name="networks">
            <!-- bus -->
            <elem name="rightLeg">can0</elem>
            <!-- driver nodes -->
            <elem name="SRA">ID1</elem>
            <elem name="FRA">ID2</elem>
            <elem name="FRK">ID3</elem>
            <elem name="FRH">ID4</elem>
            <elem name="SRH">ID5</elem>
            <elem name="ARH">ID6</elem>
            <elem name="FT">ID14</elem>
            <!-- sensor nodes -->
            <elem name="FTRF">ID32</elem>
        </paramlist>
    </action>

    <action phase="shutdown" level="50" type="detach" />

</device>
